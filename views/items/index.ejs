<% layout('/layouts/boilerplate')%> 
    <h1>All Programs</h1>
    <div>
        <a href="/items/uploadpage">Add Program</a>
    </div>
        <% for(let item of items) { %> 
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=item.image%> ">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=item.title%> </h5>
                        <p class="card-text"><%=item.description%> </p>
                        <p class="card-text">
                        <small class="text-muted"><%=item.seller%> </small>
                        </p>
                        <a class="btn btn-primary" href="/items/<%=item._id%>">View <%=item.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %> 
